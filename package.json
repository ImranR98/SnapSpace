{
  "name": "snap-space",
  "version": "1.0.0",
  "description": "Online photo sharing platform.",
  "main": "server/dist/server.js",
  "scripts": {
    "start": "npm start --prefix ./server",
    "all": "npm run install; npm run build; npm start;",
    "install": "npm i --prefix ./models; npm i --prefix ./server; npm i --prefix ./client;",
    "build": "npm run build-models; npm run build-server; npm run build-client;",
    "build-models": "npm run build --prefix ./models",
    "build-server": "npm run build --prefix ./server",
    "build-client": "npm run build --prefix ./client",
    "dev-models": "npm run dev --prefix ./models",
    "dev-server": "npm run dev --prefix ./server",
    "dev-client": "npm run start --prefix ./client"
  },
  "author": "Imran Remtulla",
